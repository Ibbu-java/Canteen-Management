{
  "name": "canteen-management-system",
  "version": "1.0.0",
  "description": "A full-stack MERN application for managing college canteen operations with user authentication, food ordering, and payment integration",
  "main": "server.js",
  "engines": {
    "node": ">=14.x"
  },
  "scripts": {
    "frontend": "cd frontend && npm start",
    "start": "concurrently \"npm run server\" \"npm run frontend\"",
    "server": "nodemon server.js",
    "setup": "cd frontend && npm install",
    "populate": "node populate-food-data.js"
  },
  "keywords": [
    "canteen",
    "food-ordering",
    "mern",
    "react",
    "nodejs",
    "mongodb",
    "express"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "config": "^3.3.1",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-validator": "^6.6.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.10.3",
    "nodemon": "^2.0.4"
  },
  "devDependencies": {
    "concurrently": "^6.5.1"
  }
}
